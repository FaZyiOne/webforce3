<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% for flash in app.session.flashBag.get('notice') %}
