	            {{ flash }}
	        </div>
	    {% endfor %}
        {% block body %}{% endblock %}
            <script src="{{ asset('js/jquery-3.4.1.js')}}"></script>
            <script type="text/javascript" src="{{ asset('js/main.js')}}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
